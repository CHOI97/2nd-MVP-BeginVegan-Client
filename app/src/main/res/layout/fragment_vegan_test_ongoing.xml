<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.ui.view.VeganTestOngoingFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/pb_vegan_test_ongoing"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="150dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_vegan_test_ongoing"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@id/pb_vegan_test_ongoing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="50dp"
            >
            <TextView
                android:id="@+id/tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="질문"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/b_answer_a"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="답변A"
            app:layout_constraintTop_toBottomOf="@id/cv_vegan_test_ongoing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"/>
        <Button
            android:id="@+id/b_answer_b"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="답변B"
            app:layout_constraintTop_toBottomOf="@id/b_answer_a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>