<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.ui.view.MainProfileFragment">
    <ImageView
        android:id="@+id/iv_background_top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/gradient_profile_bg"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/btn_profile_more"
            android:layout_width="@dimen/btn_32"
            android:layout_height="@dimen/btn_32"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_profile_more"
            android:background="@color/color_transparent"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_8"/>
        <LinearLayout
            android:id="@+id/ll_profile_usernames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_profile_more"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_44"
            android:layout_marginStart="@dimen/side_margin"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="@dimen/text_20"
                android:textColor="@color/color_text_32"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"/>
            <ImageButton
                android:id="@+id/ib_edit_username"
                android:layout_width="@dimen/item_28"
                android:layout_height="@dimen/item_28"
                android:src="@drawable/ic_profile_edit"
                android:scaleType="fitCenter"
                android:background="@color/color_transparent"
                android:padding="@dimen/margin_6"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_vegan_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_profile_usernames"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_4"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_user_vegan_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vegan_type_lacto_ovo_kr"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color_text_32"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"/>
            <ImageButton
                android:id="@+id/ib_edit_vegan_type"
                android:layout_width="@dimen/btn_24"
                android:layout_height="@dimen/btn_24"
                android:src="@drawable/ic_general_arrow_large"
                android:scaleType="fitCenter"
                android:background="@color/color_transparent"
                android:rotation="90"
                android:padding="@dimen/margin_4"/>
        </LinearLayout>
        <Button
            android:id="@+id/b_go_vegan_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_go_vegan_test"
            android:textColor="@color/color_primary3"
            android:textSize="@dimen/text_14"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:backgroundTint="@color/color_transparent"
            android:background="@color/color_transparent"
            app:layout_constraintTop_toBottomOf="@id/ll_vegan_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="@dimen/margin_12"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_records"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_56"
            app:layout_constraintTop_toBottomOf="@id/b_go_vegan_test"
            app:tabTextColor="@color/color_primary3"
            app:tabTextAppearance="@style/tabProfileTextSize"
            app:tabIndicatorColor="@color/color_primary3"
            app:tabIndicatorHeight="@dimen/line_1"
            app:tabRippleColor="@null">
<!--            <com.google.android.material.tabs.TabItem-->
<!--                android:id="@+id/ti_myreview"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/profile_my_review" />-->
<!--            <com.google.android.material.tabs.TabItem-->
<!--                android:id="@+id/ti_myscrap"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/profile_my_scrap"/>-->
        </com.google.android.material.tabs.TabLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_my_records"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tl_records"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>