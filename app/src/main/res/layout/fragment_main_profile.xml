<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.ui.view.MainProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_background_top"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/iv_background_top"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>
        <ImageButton
            android:id="@+id/ib_edit_username"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/iv_background_top"
            app:layout_constraintStart_toEndOf="@id/tv_username"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/b_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:textColor="@color/color_text_32"
            app:layout_constraintTop_toBottomOf="@id/iv_background_top"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/color_white"/>
        <Spinner
            android:id="@+id/spinner_vegan_type"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/tv_username"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp" />
        <Button
            android:id="@+id/b_go_vegan_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비건 성향테스트 바로가기"
            android:textColor="@color/color_text_32"
            android:backgroundTint="@color/color_white"
            app:layout_constraintTop_toBottomOf="@id/spinner_vegan_type"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_records"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/b_go_vegan_test">
            <com.google.android.material.tabs.TabItem
                android:id="@+id/ti_myreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 리뷰"/>
            <com.google.android.material.tabs.TabItem
                android:id="@+id/ti_myscrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 스크랩"/>
        </com.google.android.material.tabs.TabLayout>
        <FrameLayout
            android:id="@+id/fl_records"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tl_records"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>