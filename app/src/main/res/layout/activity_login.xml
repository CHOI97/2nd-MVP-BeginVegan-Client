<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.ui.view.LoginActivity">
    <TextView
        android:id="@+id/tv_login_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Begginer에서  Veganner로"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"/>
    <TextView
        android:id="@+id/tv_login_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="간단 로그인"
        app:layout_constraintTop_toBottomOf="@id/tv_login_slogan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"/>
    <ImageButton
        android:id="@+id/ib_login_kakao"
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/tv_login_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv_login_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인이 되지 않는다면 클릭해주세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>